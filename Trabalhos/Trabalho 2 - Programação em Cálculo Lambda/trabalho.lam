    lessthan = \a. \b. isPos (sub b a);
    greaterthan = \a. \b. isPos(sub a b);
    lesserequal = \a. \b. not (greaterthan a b);
    greaterequal = \a. \b. not (lessthan a b);
    igual = \a. \b. (and (lesserequal a b) (greaterequal a b));

